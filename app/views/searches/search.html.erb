<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <h2>ユーザー検索結果（<%= @users.count %>件：<%= @word %>ユーザー）</h2>
    <%= render 'users/index', users: @users %>
  <% else %>
    <h2>投稿検索結果（<%= @books.count %>件：<%= @word %>投稿）</h2>
    <%= render 'books/index', books: @books %>
  <% end %>
</table>

