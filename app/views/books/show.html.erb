<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'errorinfo', errorinfo: @book %>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td>
            <%= link_to(@book.user) do %>
              <%= image_tag @book.user.get_profile_image(50,50) %><br>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td id="favorite-btn_<%= @book.id %>">
            <%= render 'favorites/favorite-btn', book: @book %>
          </td>
          <td>コメント数: <%= @book.book_comments.count %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, remote: true, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
      </table>
      <h2>Book Comments</h2>
      <div id="book_comments_area">
        <%= render 'book_comments/index', book: @book %>
      </div>
      <%= form_with model: [@book, @comment], local: false do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, placeholder: "コメントをここに", class: 'form-control book_body' %>
        </div>
        <div class="form-group">
          <%= f.submit '送信', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>